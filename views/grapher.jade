#save-graph-modal.modal.hide.fade(tabindex="-1", role="dialog", aria-labelledby="save-graph-modal-header", aria-hidden="true")
  .modal-header
    button.close(type="button", data-dismiss="modal", aria-hidden="true")= "Ã—"
    h3#save-graph-modal-header= "Save Graph"
  .modal-body
    #graph-name-input-control-group.control-group
      .controls
        input#graph-name-input(type="text", placeholder="Graph Name")
        span#graph-name-input-error.help-inline
  .modal-footer
    button.btn(data-dismiss="modal", aria-hidden="true")= "Cancel"
    button#save-graph-button.btn.btn-primary= "Save"

.container-fluid
  .row-fluid
    .span3
      .row
        .span6
          h4= "Graphs"
        .span6
          button#show-save-graph-modal-button.btn.btn-primary.clickable= "Save Graph"
      .row
        .span12
          table.table.table-condensed.table-hover#saved-graph-table

    #chart-container.span9
      h4#chart-title(style="text-align: center;")

      #daterangeselect.btn-group.pull-right
        button.btn.dropdown-toggle(data-toggle='dropdown')
          | Last day
          span.caret
        ul.dropdown-menu

      img#chart-loading(src="/images/loading_spinner.gif", style="display: block; margin-left: auto; margin-right: auto;")

      #chart

  .row-fluid
    .span4
      h4= 'Entities'
      table.table.table-condensed.table-hover#entity-table

    .span4
      h4= 'Checks'
      table.table.table-condensed.table-hover#check-table

    .span4
      h4= 'Metrics'
      table.table.table-condensed.table-hover#metric-table
